{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "skipLibCheck": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["/**/*.ts", "/*.ts"],
  "exclude": ["node_modules"]
}
